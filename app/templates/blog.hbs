<div class="blog-post">
    <div class="clearfix">
        <div class="date-panel float-left">
            <p>{{formatted-date createdOn "MMM DD"}}<span>{{formatted-date createdOn "YYYY"}}</span></p>
        </div>
        <div class="title">
            <div>{{title}}</div>
            <div>
                <div class="category">Under category <span>"{{category.name}}"</span> </div>
            </div>
        </div>
    </div>
    <div class="content">
        {{{blogContent}}}          
    </div>
</div>