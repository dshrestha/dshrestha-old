<h1 class="grey-dotted-border-bottom">Speak your mind</h1>
<div class="form-container">
    <div class="row">{{input placeholder="Your name" class="form-control" value=name}}</div>
    <div class="row form-err-messaage">{{validationErrors.name}}</div>
    <div class="row">{{input placeholder="Your email address" class="form-control" value=email}}</div>
    <div class="row form-err-messaage">{{validationErrors.email}}</div>
    <div class="row">{{textarea placeholder="Your message" class="form-control" value=message}}</div>
    <div class="row form-err-messaage">{{validationErrors.message}}</div>
    <div class="row"><img style=" border: 1px solid #CCC;" alt="CAPTCHA Image" src="{{unbound captchaPath}}" id="captcha">  <img src="assets/images/sync.png" {{action 'refreshCaptcha' target="view"}}/></div>
    <div class="row">{{input placeholder="Enter code shown on the box above" class="form-control" value=captcha}}</div>
    <div class="row form-err-messaage">{{validationErrors.captcha}}</div>
    <div class="row"><button name="submit-feedback" type="submit" class="btn light" {{action 'submitFeedback'}}>Send</button></div>    
</div>